#!/bin/bash
cd ~
. ~/.gcs-x2go
[ -z "$SERVERNAME" ] && exit 1
if [ "$SERVER_USE_ROOT" = "true" ] ; then
	export SERVERNAME="/$SERVERNAME"
fi
sudo chroot $SERVERNAME service ssh stop
sudo umount $SERVERNAME/dev/pts $SERVERNAME/dev/shm $SERVERNAME/proc $SERVERNAME/sys $SERVERNAME/home
while grep -q "$SERVERNAME/home" /etc/mtab ; do
	while ! sudo umount $SERVERNAME/home ; do
		sudo lsof | grep "$SERVERNAME/home"
		sleep 1
	done
done
if sudo rm -rf --one-file-system $SERVERNAME ; then
	echo "All done."
else
	while ! sudo umount $SERVERNAME/home ; do
		sudo lsof | grep "$SERVERNAME/home"
		sleep 1
	done
fi
